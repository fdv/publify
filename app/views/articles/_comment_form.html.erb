<%= form_tag @article.comment_url do %>
  <div class="comment-form">
    <div class="comment-form__group comment-form__group--body">
      <%= text_area 'comment', 'body', :rows => 8, :class => 'form-control comment-form__text-area', :placeholder => t(".your_comment") %>
    </div>

    <div class="comment-form__group comment-form__group--author">
      <%= label "comment", "author", t(".your_name") %>
      <%= text_field "comment", "author", :class => 'form-control comment-form__text-field' %>
    </div>

    <div class="comment-form__group comment-form__group--email_address">
      <%= label "comment", "email", t(".your_email_address") %>
      <%= text_field "comment", "email", :class => 'form-control comment-form__text-field' %>
    </div>

    <% if this_blog.use_recaptcha %>
      <div class="comment-form__group"><%= raw recaptcha_tags :ajax => true %></div>
    <% end %>

    <div class="comment-form__group comment-form__group--submit">
      <%= link_to t('.cancel'), '#' %> <input class="button button--primary comment-form__submit-button" type="submit" value="<%= t('.post_comment') %>">
    </div>
  </div>
<% end %>
