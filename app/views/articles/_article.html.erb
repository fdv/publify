<% class_name = ['one', 'two', 'three'][Random.rand(3)] %>

<div class="l-tile">
  <div class="article-tile article-tile--<%= class_name %>">
    <h2><%= link_to_permalink(article, truncate(article.title, length: 53), nil, 'article-tile__heading article-tile__heading--' + class_name) %></h2>
    <time class="article-tile__date article-tile__date--<%= class_name %>"><%= display_date_and_time(article.published_at) %></time>
    <%= link_to_permalink(article, article.published_comments.size, 'comments', 'article-tile__comments article-tile__comments--' + class_name) %>
  </div>
</div>
