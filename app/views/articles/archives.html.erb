<h2>Archive</h2>

<%- if @articles.empty? %>
  <div class="post">
  <p><%= t(".no_articles_found")%></p>
</div>
<%- else %>
  <div class="l-constrained">
  <%- for article in @articles %>
    <div class="archivepost">
      <h3><%= link_to_permalink(article,h(article.title)) %></h3>
      <p><%= link_to(article.author, author_path(article.author)) %> - <%= article.published_at.strftime("#{article.published_at.day.ordinalize} %b %Y") %></p>
      <%- if article.body %>
      <p><%= article.body %></p>
      <% end %>
    </div>
  <%- end %>
  </div>
<%- end %>

<%= paginate @articles %>
