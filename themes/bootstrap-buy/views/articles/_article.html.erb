<article id="article-<%= article.id %>" class='h-entry hentry h-as-note'>
  <h1><%= (controller.controller_name == 'redirect') ? article.title : link_to_permalink(article,article.title) %></h1>
  <div>
    <p><%= render 'articles/protected_article_content', { :article => article } %></p>
    <%= render 'articles/meta', article: article %>    
  </div>

  <div class='comments'>
    <%= render 'articles/comment_counter', article: article %>
  </div>
</article>
